<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="app.name">demo-app</Property>
		<Property name="log.path">./log/</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} | ${app.name} |- %msg%n"
				charset="UTF-8" />
		</Console>
		<RollingFile name="demo-Log"
			fileName="${log.path}/demo.log"
			filePattern="${log.path}/demo-%d{yyyyMMdd}-%i.log">
			<PatternLayout alwaysWriteExceptions="false"
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} | ${app.name} |- %msg%n"
				charset="UTF-8" />
			<Policies>
				<SizeBasedTriggeringPolicy size="30 MB" />
			</Policies>
			<DefaultRolloverStrategy max="2000">
				<Delete basePath="${log.path}/" maxDepth="3">
					<IfFileName glob="**.log" />
					<IfLastModified age="7d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="com.redlian.demo" level="TRACE" />
		<Root level="INFO">
			<AppenderRef ref="Console" />
			<AppenderRef ref="demo-Log" />
		</Root>
	</Loggers>
</Configuration>
